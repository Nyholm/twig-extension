{
    "name": "puli/twig-extension",
    "description": "A Puli extension for the Twig templating system.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": "^5.3.9|^7.0",
        "puli/repository": "^1.0-beta9@dev",
        "twig/twig": "^1.20|^2.0",
        "webmozart/path-util": "^2.0"
    },
    "require-dev": {
        "puli/discovery": "^1.0-beta9@dev",
        "puli/url-generator": "^1.0-beta4@dev",
        "symfony/http-kernel": "^2.3",
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1"
    },
    "suggest": {
        "puli/url-generator": "to use the resource_url() function"
    },
    "autoload": {
        "psr-4": {
            "Puli\\TwigExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\TwigExtension\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
